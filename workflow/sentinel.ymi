name: Tesla Market Sentinel (Hourly)

on:
  schedule:
    - cron: "15 * * * *"   # runs hourly at :15 UTC (~:08 PT)
  workflow_dispatch:

permissions:
  contents: write

env:
  PYTHONUNBUFFERED: "1"
  TZ: America/Los_Angeles

jobs:
  run:
    runs-on: ubuntu-latest
    steps:
      - uses: actions/checkout@v4

      - name: Set up Python
        uses: actions/setup-python@v5
        with:
          python-version: "3.11"

      - name: Install deps
        run: |
          python -m pip install --upgrade pip
          pip install yfinance pandas pytz requests

      - name: Run sentinel
        env:
          OPENAI_API_KEY: ${{ secrets.OPENAI_API_KEY }}
        run: |
          python sentinel.py

      - name: Commit alert (if changed)
        run: |
          git config user.name "github-actions[bot]"
          git config user.email "github-actions[bot]@users.noreply.github.com"
          git add -A
          git diff --cached --quiet || git commit -m "Sentinel update: $(date -u +"%Y-%m-%dT%H:%M:%SZ")"
          git push
